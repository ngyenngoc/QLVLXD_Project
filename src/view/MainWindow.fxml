<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MainWindowController" prefHeight="700.0" prefWidth="1000.0">

    <top>
        <MenuBar>
            <menus>
                <Menu text="Hệ Thống">
                    <items>
                        <MenuItem text="Thoát" onAction="#handleExit" />
                    </items>
                </Menu>
                <Menu text="Quản Lý">
                    <items>
                        <MenuItem fx:id="menuMaterial" text="Vật Liệu" onAction="#handleShowDHN" />
                        <MenuItem text="Đơn Hàng Nhập" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <StackPane fx:id="centerContent" />
    </center>

</BorderPane>